<h2>New Game</h2>
<p><%=@letters%></p>

<form action="/score" method="score" data-turbo="false">
  <p>What is the longest word you can find?<p>
  <div class="input-group">
    <div class="form-outline">
      <input type="text" name="word" placeholder="Type your word here" class="form-control">
    </div>
    <input type="submit" value="Play!" class="btn btn-primary">
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
